<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.idataai.system.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.idataai.system.domain.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="avatar_url" property="avatarUrl"/>
        <result column="nickname" property="nickname"/>
        <result column="gender" property="gender"/>
        <result column="birthday" property="birthday"/>
        <result column="industry" property="industry"/>
        <result column="status" property="status"/>
        <result column="vip_level" property="vipLevel"/>
        <result column="vip_expire_time" property="vipExpireTime"/>
        <result column="credits" property="credits"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="last_login_ip" property="lastLoginIp"/>
        <result column="register_source" property="registerSource"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="created_by" property="createdBy"/>
        <result column="updated_by" property="updatedBy"/>
    </resultMap>

    <select id="selectByEmail" resultMap="BaseResultMap">
        SELECT *
        FROM t_user
        WHERE email = #{email}
          AND is_deleted = 0
    </select>

    <select id="selectByPhone" resultMap="BaseResultMap">
        SELECT *
        FROM t_user
        WHERE phone = #{phone}
          AND is_deleted = 0
    </select>

</mapper>
